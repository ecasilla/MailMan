<!--[if (gt IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "MailMan" %></title>

  	<%= stylesheet_link_tag "application" %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="container">
      <div class="navbar">
        <a class="brand"><h3><%= link_to "MailMan",root_path %></h3></a>
          <div class ="navbar-inner">
            <li><%= link_to "Create Campaign",new_user_campaign_path( current_user ) %></li>
            <li class=""><%= link_to "popover", "#", :title => "Popover", :rel=>"popover" %></li>
            <li><%= link_to "Contact Us", new_contact_path  %></li>
            <li class=""></li>
            <li><%= link_to "About Us", about_path %></li>
            <li><%= link_to'Sign In',new_session_path, class: "button radius" %></li>
          </div>
      </div>
   
    </nav>

  <div class="container-fluid">
    <div>
        <%= link_to "Main",user_path(current_user) %>
        <%= link_to "Edit", edit_user_path(current_user) %>
        <%= link_to "Contacts", user_recipients_path(current_user)  %>
        <%= link_to "Campaigns",user_campaigns_path(current_user) %>
        <%= link_to "Delete Account", user_path(current_user), :method => :delete %>
        <%= link_to "Log Out", session_path, :method => :delete %>
     </div>
  </div>
  <%= yield %>
    
    <%= javascript_include_tag "application" %>
  </body>
</html>
