      <div class="footer-copyright">
        Copyright &copy; 2013 <a href="#" target="_blank">MailMan</a>. All rights reserved.
      </div>
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
      <!-- END Copyright -->
      <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->

    </div>
