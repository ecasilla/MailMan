
<div class="divider"></div>

<%= form_tag import_recipients_path, method: :post, multipart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Upload" , class: "btn btn-primary form-horizontal"%>
<% end %>

<%= form_for([current_user, @recipient]) do |f| %>
  <%= f.text_field :first_name, class: "form-horizontal", :placeholder=> "First Name" %>
  <%= f.text_field :last_name, class: "form-horizontal", :placeholder=> "Last Name" %>
  <%= f.text_field :email, class: "form-horizontal", :placeholder=> "Email" %>
  <%= f.text_field :phone, class: "form-horizontal", :placeholder=> "Phone" %>
 <%= f.submit "Save" , class: "btn btn-primary form-horizontal"  %>
<% end %>