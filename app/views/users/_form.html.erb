<% unless @user.errors.none? %>
  <% @user.errors.full_messages.each do |msg| %>
    <%= msg %>
  <% end %>
<% end %>

<%= form_for @user do |f|  %>
  <%= f.text_field :first_name, class: "form-horizontal", placeholder: "First Name" %>

 <%= f.text_field :last_name, class: "form-horizontal",placeholder: "Last Name"  %>

  <%= f.email_field :email, class: "form-horizontal",placeholder: "Email"  %>

  <%= f.password_field :password,class: "form-horizontal" ,placeholder: "Password" %>

  <%= f.password_field :password_confirmation,class: "form-horizontal",placeholder: "Password Confirmation"  %>

  <%= f.text_field :phone_number,class: "form-horizontal",placeholder: "Phone" %>

  <%= f.submit "Submit" ,class: "btn btn-primary form-horizontal"  %>
<% end %>